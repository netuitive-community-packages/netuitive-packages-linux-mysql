{
  "policy": {
    "actions": [
      {
        "category": 2,
        "type": "event"
      }
    ],
    "conditions": [
      {
        "analytic": "actual",
        "level": 10,
        "metric": "netuitive.linux.mysql.slowqueries.percentage",
        "operator": ">"
      }
    ],
    "deleted": false,
    "description": "Over 10% of queries are performing slower than expected.",
    "duration": 900,
    "enabled": true,
    "name": "Linux MySQL - Too Many Slow Queries",
    "scope": {
      "elementType": "SERVER"
    }
  }
}